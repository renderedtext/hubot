apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: hubot
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: hubot
    spec:
      containers:
      - name: hubot
        image: <%= image %>
        env:
          - name: HUBOT_LOG_LEVEL
            value: info
          - name: HUBOT_SLACK_TOKEN
            valueFrom:
              secretKeyRef:
                name: hubot-secrets
                key: HUBOT_SLACK_TOKEN
          - name: HUBOT_GOOGLE_CSE_ID
            valueFrom:
              secretKeyRef:
                name: hubot-secrets
                key: HUBOT_GOOGLE_CSE_ID
          - name: HUBOT_GOOGLE_CSE_KEY
            valueFrom:
              secretKeyRef:
                name: hubot-secrets
                key: HUBOT_GOOGLE_CSE_KEY
          - name: REDIS_URL
            valueFrom:
              secretKeyRef:
                name: hubot-secrets
                key: REDIS_URL
